{% extends 'layouts/base.html.twig' %}

{% block title 'Pimpterest' %}

{% block body %}
    {% if pins|length > 0 %}
    {# {% if false %} #}
        <h1 class="text-center text-muted mb-4">{{ pluralize(pins|length, 'Pin') }}</h1>
        {% for row  in pins|batch(3) %}
            <div class="row mb-5">
                {% for pin in row %}
                    <div class="col-md-4">
                        <article class="pin bg-white rounded shadow">
                            <div class="mw-100 overflow-hidden rounded-top">
                                <a href="{{ path('app_pins_show', {id:pin.id}) }}">
                                    <img src="{{ ( pin.imageName ? vich_uploader_asset(pin) : asset('build/images/placeHolder.png') ) | imagine_filter('square_thumbnail_small') }}"  alt="{{pin.title }}" class="w-100 "/>
                                </a>
                            </div>
                            <h2 class="h5 ps-3 pt-3"><a href="{{ path('app_pins_show', {id:pin.id }) }}" class="text-decoration-none text-secondary">{{ pin.title}}</a></h2>
                            <p class="ps-3 pb-3 text-muted"><small>Submitted {{ pin.user.getFullName}} - {{pin.createdAt|ago }}</small></p>
                            {# <a href="#" onClick="event.preventDefault(); confirm('Etes-vous sûr ?') && document.getElementById('js-pin-delete-form-{{pin.id}}').submit();" class="btn btn-danger m-3">&times; Supprimer</a>
                            <form id="js-pin-delete-form-{{pin.id}}" action="{{path('app_pins_delete', {id:pin.id}) }}" method="post" style="display:none">
                                <input type="hidden" name="_method" value="DELETE"/>
                                <input type="hidden" name="csrf_token" value="{{ csrf_token('pins.deletion' ~ pin.id) }}">
                            </form> #}
                        </article >
                    </div>

                {% endfor %}
            </div>
        {% endfor %}
    {% else %}
        <p class="text-center h1 mt-5">Il n'y a pas de pin. </br><a href="{{ path('app_pins_create' ) }}">Soyez le premier à créer un pin</a></p>
    {% endif %}
{% endblock %}
