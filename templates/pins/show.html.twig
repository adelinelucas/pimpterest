{% extends 'layouts/base.html.twig' %}

{% block title pin.title %}

{% block body %}
    <article>
        <h1>{{ pin.title}} </h1>
        <p> {{ pin.description}}</p>
        <a href="{{path('app_pins_edit', {id:pin.id}) }}">Editer</a> |
        <a href="#" onClick="event.preventDefault(); confirm('Etes-vous sÃ»r ?') && document.getElementById('js-pin-delete-form').submit();">Supprimer</a>

        <form id="js-pin-delete-form" action="{{path('app_pins_delete', {id:pin.id}) }}" method="post" style="display:none">
            <input type="hidden" name="_method" value="DELETE"/>
            <input type="hidden" name="csrf_token" value="{{ csrf_token('pins.deletion' ~ pin.id) }}">
        </form>
    </article>
{% endblock %}