{% extends 'layouts/base.html.twig' %}

{% block title 'Register!' %}

{% block body %}
<div class="row">
    <div class="col-md-6 mx-auto">
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-error rounded mb-3" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <h1 class="text-center my-5">Créer un compte</h1>

    {{ form_start(registrationForm, {'attr':{'novalidate':'novalidate', 'class':'maclasseperso'}}) }}
    <div class="row">
        <div class="col-md-6">
            {{ form_row(registrationForm.firstName) }}
        </div>
        <div class="col-md-6">
            {{ form_row(registrationForm.lastName) }}
        </div>
    </div>
       
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword) }}
        {# {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }} #}
        {{ form_row(registrationForm.agreeTerms) }}
        
        <div class="d-grid gap-2">
            <button type="submit" class="btn btn-primary btn-lg " formnovalidate>Je m'inscris</button>
        </div>
        <p class="mt-5 mb-3 text-center text-muted">Déja un compte, connectez-vous! <a href="{{ path('app_login') }}">Se connecter</a></p>
    {{ form_end(registrationForm) }}
    </div>
</div>
    
{% endblock %}
